<h1>Listing work_days</h1>

<table>
  <thead>
    <tr>
      <th>In hour</th>
      <th>Out hour</th>
      <th>Weekend</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @work_days.each do |work_day| %>
      <tr>
        <td><%= work_day.in_hour %></td>
        <td><%= work_day.out_hour %></td>
        <td><%= work_day.weekend %></td>
        <td><%= link_to 'Show', work_day %></td>
        <td><%= link_to 'Edit', edit_work_day_path(work_day) %></td>
        <td><%= link_to 'Destroy', work_day, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Work day', new_work_day_path %>
